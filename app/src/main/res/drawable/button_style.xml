<?xml version="1.0" encoding="utf-8"?><!-- 有边框 有圆角 背景灰色 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:constantSize="true">
    <item android:state_pressed="true"> 
		<shape android:shape="rectangle">		    
		    <gradient 
		        android:startColor="@color/colorPrimaryDark"
		        android:endColor="@color/colorPrimaryDark"
		        android:angle="90"/>
		    <padding android:left="2sp"
		        android:top="2sp"
		        android:right="2sp"
		        android:bottom="2sp" />
		    <corners android:radius="5sp" />
		</shape>
 	</item>
 	<item>
		<shape android:shape="rectangle">
		    <gradient
		        android:startColor="@color/appColor"
		        android:endColor="@color/appColor"
		        android:angle="90"/>
		    <padding
				android:left="2sp"
		        android:top="2sp"
		        android:right="2sp"
		        android:bottom="2sp" />
		    <corners android:radius="5sp" />
		   <stroke android:width="2dip" android:color="@color/appColor"/>
		</shape>	
    </item>
 </selector>